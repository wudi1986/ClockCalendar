<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <RelativeLayout
        android:id="@+id/group_info_frist_item_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/newest_fragment_item_center_shape" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/guangchang_bd_duihao" />

        <TextView
            android:id="@+id/group_info_frist_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textColor="@color/white"
            android:textSize="@dimen/font4" />

        <TextView
            android:id="@+id/group_info_frist_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/group_info_frist_item_title"
            android:layout_below="@+id/group_info_frist_item_title"
            android:layout_marginTop="4dp"
            android:paddingBottom="12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font5" />

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp" >

            <ImageView
                android:id="@+id/addTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/guangchang_bd_tianjia" 
                />

            <TextView
                android:id="@+id/group_info_frist_item_taskInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="@dimen/font5"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>