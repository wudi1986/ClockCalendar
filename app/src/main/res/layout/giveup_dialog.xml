<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" 
        android:background="@drawable/giveupjob_dialog_shape"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="放弃"
                android:textColor="@color/meibao_color_7"
                android:textSize="@dimen/font3" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="@color/meibao_color_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="今天就是不想打卡"
                android:textColor="@color/meibao_color_10"
                android:textSize="@dimen/font5" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" >

            <EditText
                android:id="@+id/giveup_dialog_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/color_line"
                android:hint="  放弃理由：" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" 
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/giveup_dialog_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/giveup_dialog_result_shape"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="确定放弃" />

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/giveup_dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/giveup_dialog_cancel_shape"
                android:gravity="center"
                android:textColor="@color/meibao_color_7"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>