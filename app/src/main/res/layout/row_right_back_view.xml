<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="1dp" -->
<!--             android:layout_above="@id/bottomView" -->
<!--             android:layout_alignRight="@id/layout" -->
<!--             android:background="@color/meibao_color_12" /> -->
    </RelativeLayout>

</LinearLayout>