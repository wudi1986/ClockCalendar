    <ImageView
        android:id="@+id/closeDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="167dp"
        android:src="@drawable/dh_close"
         />
    
    <LinearLayout 
        android:id="@+id/sharedTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font5"
            android:textColor="@color/white"
            android:text="打卡后告诉朋友 "
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font3"
            android:textColor="@color/white"
            android:text="让Ta们来“监督”你："
            android:layout_marginTop="6dp"
            />
        
    </LinearLayout>

 
    <LinearLayout
        android:id="@+id/shareButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sharedTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" >

        <ImageView
            android:id="@+id/sinaShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:src="@drawable/dh_sina" />

        <ImageView
            android:id="@+id/daka_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/dh_circle" />

        <ImageView
            android:id="@+id/daka_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/dh_qq" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dakaSum"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp" >

            <TextView
                android:id="@+id/jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="积分说明"
                android:textColor="@color/white"
                android:textSize="@dimen/font4" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_alignLeft="@id/jifen"
                android:layout_alignRight="@id/jifen"
                android:layout_below="@id/jifen"
                android:src="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/finishLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="今日已有"
                android:textColor="@color/white"
                android:textSize="@dimen/font5" />

            <TextView
                android:id="@+id/userNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/meibao_color_1"
                android:textSize="@dimen/font5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="人完成此卡"
                android:textColor="@color/white"
                android:textSize="@dimen/font5" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:src="@drawable/home_jiantou" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>