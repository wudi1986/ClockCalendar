<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slide="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/meibao_color_15"
    android:layout_height="48dp"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/meibao_color_10"
            android:textSize="@dimen/font3"
            android:text="1" />

        <TextView
            android:id="@+id/searchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/searchTitle"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/meibao_color_11"
            android:textSize="@dimen/font5" 
             android:text="2" />
        
        <ImageView 
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/xinjian_biaoti_tianjia"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"/>
        
    </RelativeLayout>

</RelativeLayout>