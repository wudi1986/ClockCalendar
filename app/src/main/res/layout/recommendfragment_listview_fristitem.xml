<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/recommendfragment_listview_fristitem_topLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/meibao_color_15" >

        <ImageView
            android:id="@+id/recommendfragment_listview_fristitem_topLayoutImage"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/guangchang_gc_paihang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/recommendfragment_listview_fristitem_topLayoutImage"
            android:gravity="center_vertical"
            android:text="今日牛人榜"
            android:textColor="@color/meibao_color_14"
            android:textSize="@dimen/font5" />
    </RelativeLayout>

    <com.yktx.check.listview.TwoWayView
        android:id="@+id/recommendfragment_listview_fristitem_HorizontalListView"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:background="@color/white"
        android:orientation="horizontal" />

