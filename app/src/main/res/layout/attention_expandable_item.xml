<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meibao_color_15"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <RelativeLayout
        android:id="@+id/bgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/guangchang_guanzhu_bg3" >

        <RelativeLayout
            android:id="@+id/cardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="68dp" >

            <LinearLayout
                android:id="@+id/clock_my_item_RightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="21dp"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/clock_my_item_pointImage"
                    android:layout_width="18dp"
                    android:layout_height="22dp"
                    android:src="@drawable/geren_task_jc_jifen" />

                <TextView
                    android:id="@+id/clock_my_item_pointNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:text="10"
                    android:textColor="@color/meibao_color_1"
                    android:textSize="@dimen/font5"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/cardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/clock_my_item_Image"
                        android:layout_width="16dp"
                        android:layout_height="20dp"
                        android:src="@drawable/xz0"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/clock_my_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="每天早上喝白开水"
                        android:textColor="@color/meibao_color_9"
                        android:textSize="@dimen/font4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/clock_my_item_progress1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/clock_my_item_progress2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/clock_my_item_progress3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/clock_my_item_progress4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/clock_my_item_progress5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/clock_my_item_progress6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1_light" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/clock_my_item_progress7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/meibao_color_1_light" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/clock_my_item_justNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="上次打卡  5小时前"
                android:textColor="@color/meibao_color_11"
                android:textSize="@dimen/font5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/clock_my_item_grade"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/clock_my_item_justNow"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/grade1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/font4"
                android:visibility="gone" />

            <!-- <View -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="1dp" -->
            <!-- android:layout_below="@+id/clock_my_item_todayClock" -->
            <!-- android:layout_marginTop="12dp" -->
            <!-- android:background="@color/meibao_color_12" /> -->

            <TextView
                android:id="@+id/clock_my_item_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:text="天"
                android:textColor="@color/meibao_color_1"
                android:textSize="@dimen/font4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/clock_my_item_TotalCheckCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clock_my_item_day"
                android:layout_centerVertical="true"
                android:layout_marginBottom="-2dp"
                android:layout_toLeftOf="@id/clock_my_item_day"
                android:text="12"
                android:textColor="@color/meibao_color_1"
                android:textSize="@dimen/font2"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/taskItem_TopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTitle"
            android:paddingLeft="68dp"
            android:paddingRight="12dp" >

            <RelativeLayout
                android:id="@+id/taskItem_lineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp" >

                <RelativeLayout
                    android:id="@+id/taskItem_ContentTextLayot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/taskItem_ContentNum"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/taskinfo_quantity_shape"
                        android:gravity="center"
                        android:maxWidth="108dp"
                        android:minWidth="60dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="45"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/taskItem_Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/taskItem_ContentNum"
                        android:textColor="@color/meibao_color_9"
                        android:textSize="@dimen/font4" />

                    <TextView
                        android:id="@+id/taskItem_Content2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/taskItem_ContentNum"
                        android:textColor="@color/meibao_color_9"
                        android:textSize="@dimen/font4"
                        android:visibility="gone" 
                        android:lineSpacingMultiplier="1.2"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/taskItem_ImageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taskItem_ContentTextLayot"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/taskItem_ImageLayout_only1"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:maxHeight="160dp"
                        android:scaleType="fitStart" />

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp" >

                        <ImageView
                            android:id="@+id/taskItem_ImageLayout_Image1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/guangchang_picture"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp" >

                        <ImageView
                            android:id="@+id/taskItem_ImageLayout_Image2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/guangchang_picture"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp" >

                        <ImageView
                            android:id="@+id/taskItem_ImageLayout_Image3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/guangchang_picture"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/taskinfo_bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskItem_lineLayout"
                android:layout_marginTop="8dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/taskinfo_CVLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/attention_fragment_item_numLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/attention_fragment_item_TimeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/building_time_image" />

                            <TextView
                                android:id="@+id/attention_fragment_item_TimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="30分钟"
                                android:textColor="@color/meibao_color_11"
                                android:textSize="@dimen/font5" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/attention_fragment_item_commentsNumLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="8dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/building_comment_image" />

                            <TextView
                                android:id="@+id/attention_fragment_item_commentsNumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="0"
                                android:textColor="@color/meibao_color_11"
                                android:textSize="@dimen/font5" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/taskItem_bottomLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_line" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/taskItem_bottomBlank"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:orientation="horizontal" >
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/taskItem_bottomLayout"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center" >

                                <TextView
                                    android:id="@+id/taskItem_bottomText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="das"
                                    android:textColor="@color/meibao_color_9"
                                    android:textSize="@dimen/font4" />

                                <ImageView
                                    android:id="@+id/taskItem_bottomImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:src="@drawable/guangchang_gz_jiantou" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/taskItem_bottomLine2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/color_line" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>