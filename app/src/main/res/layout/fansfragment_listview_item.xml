<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/fansfragment_listview_item_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp" >

        <ImageView
            android:id="@+id/fansfragment_listview_item_headImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/zw_touxiang" />

        <TextView
            android:id="@+id/fansfragment_listview_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/fansfragment_listview_item_headImage"
            android:text="小帅"
            android:textColor="@color/meibao_color_10"
            android:textSize="@dimen/font4" />

        <LinearLayout
            android:id="@+id/fansfragment_listview_item_pointLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fansfragment_listview_item_name"
            android:layout_below="@+id/fansfragment_listview_item_name"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/geren_guanzhu_jifen" />

            <TextView
                android:id="@+id/fansfragment_listview_item_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="115"
                android:textColor="@color/meibao_color_11"
                android:textSize="@dimen/font5" />
        </LinearLayout>

        <TextView
            android:id="@+id/fansfragment_listview_item_timeOrtaskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fansfragment_listview_item_headImage"
            android:layout_marginTop="12dp"
            android:text="3小时前  打卡#平板支撑#"
            android:textColor="@color/meibao_color_9"
            android:textSize="@dimen/font5" />

        <LinearLayout
            android:id="@+id/fansfragment_listview_item_fanstypeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fansfragment_listview_item_fanstypeImage"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/geren_guanzhu_yiguan" />

            <TextView
                android:id="@+id/fansfragment_listview_item_fanstypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="关注"
                android:textColor="@color/meibao_color_11"
                android:textSize="@dimen/font4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fansfragment_listview_item_medalLayout"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/fansfragment_listview_item_fanstypeLayout"
            android:layout_toRightOf="@+id/fansfragment_listview_item_name"
            android:orientation="horizontal"
            android:gravity="center_vertical" 
            android:layout_marginTop="1dp">
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/fansfragment_listview_item_Layout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_line" />

</RelativeLayout>