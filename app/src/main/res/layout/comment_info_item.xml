<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp" 
    android:background="@color/white">

    <ImageView
        android:id="@+id/comment_info_item_headImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_launcher" 
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/comment_info_item_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/comment_info_item_headImage"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingRight="16dp"
        android:paddingTop="2dp" >

        <TextView
            android:id="@+id/comment_info_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小米"
            android:textColor="@color/meibao_color_9"
            android:textSize="@dimen/font4" />

        <TextView
            android:id="@+id/comment_info_item_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/meibao_color_14"
            android:textSize="@dimen/font4" />
    </LinearLayout>

    <ImageView
        android:id="@+id/comment_info_item_huifu"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/comment_info_item_Layout"
        android:layout_marginRight="10dp"
        android:src="@drawable/pl_huifu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/comment_info_item_Layout"
        android:background="@color/meibao_color_12"
        android:layout_marginRight="16dp" />

</RelativeLayout>