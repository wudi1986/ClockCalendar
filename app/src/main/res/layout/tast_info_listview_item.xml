<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meibao_color_15"
    android:paddingTop="8dp" >

    <RelativeLayout
        android:id="@+id/taskItem_TopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="8dp" >

        <RelativeLayout
            android:id="@+id/taskItem_lineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_shade"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/taskItem_ContentNum"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/taskinfo_quantity_shape"
                android:gravity="center"
                android:maxWidth="108dp"
                android:minWidth="60dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="45"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/taskItem_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/taskItem_ContentNum"
                android:paddingBottom="4dp"
                android:text="dgfsfkjdasfldjsfkldsjfdkldjsafkldjsklcnjdaisdfjoaisdjxlksdjklsj"
                android:textColor="@color/meibao_color_9"
                android:textSize="@dimen/font4" 
                android:lineSpacingMultiplier="1.2"/>
            

            <LinearLayout
                android:id="@+id/taskItem_ImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskItem_Content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/taskItem_ImageLayout_only1"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="204dp"
                    android:scaleType="fitStart" />

                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="102dp" >

                    <ImageView
                        android:id="@+id/taskItem_ImageLayout_Image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/guangchang_picture"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="3dp" >

                    <ImageView
                        android:id="@+id/taskItem_ImageLayout_Image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/guangchang_picture"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="3dp" >

                    <ImageView
                        android:id="@+id/taskItem_ImageLayout_Image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/guangchang_picture"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/taskItem_ImageBlank"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/taskItem_ImageLayout" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/taskItem_NumLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/taskItem_ImageLayout"
                android:layout_below="@+id/taskItem_ImageBlank"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/taskItem_TimeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/building_time_image" />

                    <TextView
                        android:id="@+id/taskItem_TimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="30分钟"
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taskItem_votesNumLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/taskItem_TimeLayout"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/taskItem_votesNumImage"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/building_vote_image" />

                    <TextView
                        android:id="@+id/taskItem_votesNumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="点赞"
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taskItem_commentsNumLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/taskItem_votesNumLayout"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/building_comment_image" />

                    <TextView
                        android:id="@+id/taskItem_commentsNumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="评论"
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/taskItem_moreImage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toLeftOf="@+id/taskItem_shared"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/xq_delete" />

                <ImageView
                    android:id="@+id/taskItem_shared"
                    android:layout_width="16dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/xq_fenxiang" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/taskinfo_NumLayoutBottomBlank"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/taskItem_lineLayout" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/taskinfo_bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskinfo_NumLayoutBottomBlank"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:paddingRight="12dp" >

            <RelativeLayout
                android:id="@+id/taskinfo_CVLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/taskItem_votesUsersLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/taskItem_votesUsersImage"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/building_vote_info_image" />

                    <TextView
                        android:id="@+id/taskItem_votesUsersContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/taskItem_votesUsersImage"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="dasdsadadfklfjdsfkljfkjdfjdgkljklgajdklsgfjdklfjdslfj"
                        android:textColor="@color/meibao_color_10"
                     	android:textSize="@dimen/font5" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/taskItem_blank"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@+id/taskItem_votesUsersLayout"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/taskItem_commentsContentLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taskItem_blank"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/taskItem_commentsContentUserbeforeimage1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/building_comment_info_image" />

                    <TextView
                        android:id="@+id/taskItem_commentsContentUserText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名1："
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/taskItem_commentsContentText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="内容1"
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taskItem_commentsContentLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taskItem_commentsContentLayout1"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/taskItem_commentsContentUserbeforeimage2"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/building_comment_info_image" />

                    <TextView
                        android:id="@+id/taskItem_commentsContentUserText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5"
                        android:text="用户名2："
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/taskItem_commentsContentText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="内容2"
                        android:textColor="@color/meibao_color_11"
                        android:textSize="@dimen/font5" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/taskItem_commentsContentMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/taskinfo_CVLayout"
                android:layout_marginTop="8dp"
                android:text="查看更多评论"
                android:textColor="@color/meibao_color_10"
                android:textSize="@dimen/font5" />

            <ImageView
                android:id="@+id/taskItem_lineImage"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/taskinfo_CVLayout"
                android:layout_alignTop="@+id/taskinfo_CVLayout"
                android:layout_marginLeft="1dp"
                android:background="@drawable/building_line_image" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/taskinfo_bottomBlankLayout"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/taskinfo_bottomLayout"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/taskItem_bottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/taskItem_TopLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/meibao_color_12" />

</RelativeLayout>